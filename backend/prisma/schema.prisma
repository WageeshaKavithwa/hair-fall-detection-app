generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  name            String
  email           String   @unique
  password        String
  hair_type       String
  primary_concern String
  profile_pic     String?
  birthday        DateTime?
  role            String   @default("user")
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
}
